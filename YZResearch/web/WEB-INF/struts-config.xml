<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
  <data-sources />
  <form-beans />
  <global-exceptions />
  <global-forwards />
  <action-mappings>
  	<action
         path="/login"
         type="com.imti.sysmgr.action.LoginAction"
         parameter="method"
         validate="false">
         <forward name="reLogin"         path="/login.jsp"/>
         <forward name="loginSucess"     path="/index.jsp"/>
      </action>
  </action-mappings>
  
</struts-config>

